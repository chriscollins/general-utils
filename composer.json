{
    "name": "chriscollins/general-utils",
    "description": "General PHP utilities.",
    "keywords": ["Utilities", "Curl", "JSON"],
    "license": "MIT",
    "authors": [
        {
            "name": "Chris Collins",
            "email": "chrisjamescollins@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "ext-curl": "*",
        "ext-mbstring": "*",
        "symfony/finder": "~2.4"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.1",
        "squizlabs/php_codesniffer": "~1.5",
        "phpmd/phpmd": "~2.0"
    },
    "autoload": {
        "psr-0": { "": "lib/" }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.1.x-dev"
        }
    },
    "config": {
        "bin-dir": "bin"
    }
}
